<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MaterialFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">

            <!-- Carbon Compounds -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    app:cardUseCompatPadding="true"
                    app:cardElevation="5dp"
                    android:translationZ="3dp"
                    app:cardCornerRadius="16dp">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/materialImage1"
                            android:layout_width="match_parent"
                            android:layout_height="400dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/category1" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:layout_gravity="center">

                            <TextView
                                android:id="@+id/materialName1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:padding="8dp"
                                android:text="CARBON COMPOUNDS (GK)"
                                android:textColor="@color/black"
                                android:textSize="24sp"
                                android:textStyle="bold"
                                android:background="@android:color/transparent" />

                            <Button
                                android:id="@+id/material1B"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:text="Open PDF"
                                android:background="@android:color/transparent"
                                android:textColor="@android:color/black" />

                        </LinearLayout>

                    </FrameLayout>

                </androidx.cardview.widget.CardView>

            </RelativeLayout>

            <!-- Chemical Properties -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    app:cardUseCompatPadding="true"
                    app:cardElevation="5dp"
                    android:translationZ="3dp"
                    app:cardCornerRadius="16dp">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="400dp">

                        <ImageView
                            android:id="@+id/materialImage2"
                            android:layout_width="match_parent"
                            android:layout_height="400dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/category2" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:layout_gravity="center">

                            <TextView
                                android:id="@+id/materialName2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:padding="8dp"
                                android:text="CHEMICAL PROPERTIES (SP)"
                                android:textColor="@color/black"
                                android:textSize="24sp"
                                android:textStyle="bold"
                                android:background="@android:color/transparent" />

                            <Button
                                android:id="@+id/material2B"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:text="Open PDF"
                                android:background="@android:color/transparent"
                                android:textColor="@android:color/black" />

                        </LinearLayout>

                    </FrameLayout>

                </androidx.cardview.widget.CardView>

            </RelativeLayout>

            <!-- Homologous Series -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    app:cardUseCompatPadding="true"
                    app:cardElevation="5dp"
                    android:translationZ="3dp"
                    app:cardCornerRadius="16dp">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="400dp">

                        <ImageView
                            android:id="@+id/materialImage3"
                            android:layout_width="match_parent"
                            android:layout_height="400dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/category3" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:layout_gravity="center">

                            <TextView
                                android:id="@+id/materialName3"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:padding="8dp"
                                android:text="HOMOLOGOUS SERIES (TMP)"
                                android:textColor="@color/black"
                                android:textSize="24sp"
                                android:textStyle="bold"
                                android:background="@android:color/transparent" />

                            <Button
                                android:id="@+id/material3B"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:text="Open PDF"
                                android:background="@android:color/transparent"
                                android:textColor="@android:color/black" />

                        </LinearLayout>

                    </FrameLayout>

                </androidx.cardview.widget.CardView>

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
